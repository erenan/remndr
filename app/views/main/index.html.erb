<section class="container-fluid" id="section2">
  <div class="row">
    <div class="col-sm-12 col-sm-offset-0 text-center">

<!-- Rails code -->

          <h2 class="text-center">Hello <% if @user.name != nil%>
                    <%= @user.name %>,
                    <%end%>
          here are your most recent notes</h2>

<!-- creates the navigation menu -->
      <div class="col-sm-3 column">  
      
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Navigation</h3>
              </div>
              <div class="panel-body">
              <div class="col-sm-12 column">  
                <%= form_tag '/', method: :get do %>
                <div class="input-group">
                  <%= search_field_tag :q, params[:q], :placeholder => "Search", :class => "form-control"%>
                  <span class="input-group-btn">
                  <%= submit_tag "Go!", :class =>"btn btn-default" %>
                  </span>
                </div>
                <br>
              </div>
                <% end %>
              <div class="col-sm-12 column">                
                <ul class="text-center nav nav-pills nav-stacked">
                  <li class="active"><a href="#newnotes" data-toggle="tab">Recent Notes</a></li>
                  <%= render 'categories' %>
                  <li><%= link_to "Edit Categories", '/categories/show_all' %></li>
                </ul>
              </div>

              </div>
            </div>

      </div>


<!-- Main pane, this display recent links or the results of search-->
<div class="tab-content">
  <div class="tab-pane active" id="newnotes">

       <div class="col-sm-9 column">  

          <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Recent Notes</h3>
              </div>
              <div class="panel-body"> See all entries:
              <div row>
                <%= link_to "New first", main_links_path, method:'get', :class => "btn btn-default btn-xs" %>
                <%= link_to "Old first", main_old_links_path, method:'get', :class => "btn btn-default btn-xs" %>
              </div> 
                <br>
                <%= render 'links' %>
              </div>
          </div>
       </div>

</div>

 <%= render 'categorypanes'%> <!-- panes called when user selects a category from the navigation menu -->

</div>

<!-- end of rails code -->
              
    </div>
  </div>
</section>

