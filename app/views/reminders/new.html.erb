<div id="smallwrapper">
  <div id="remndr-wrapper">
  
    <div class="extra2 container">
      <div class="ebox1">
        <div class="title">
          <h2>New Link</h2>
          <span class="byline">Add a new link to your list</span>
        </div>


          <% if @rem.errors.any? %>
              <h2>The following errors prevented your link from saving:</h2>
          <ul>
            <% @rem.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
          <% end %>

              <%= form_for @rem do |f| %>
                <fieldset>
                  <legend>Note to remember</legend>
                  <div>
                    <%= f.label :title %>
                    <%= f.text_field :title %>
                  </div>
                  <div>
                    <%= f.label :Content %>
                    <%= f.text_field :body %>
                  </div>
                  <div>
                    <%= f.label "Remind date (optional)" %>
                    <%= f.text_field :remind_date %>
                  </div>
                  <div>
                    <%= f.label "Expire date (optional)" %>
                    <%= f.text_field :expire_date %>
                  </div>

                </fieldset>
                <%= f.submit %>
              <% end %>

      </div>
    </div>     
  </div>
</div>


              