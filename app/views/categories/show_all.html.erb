<!-- Boostrap/CSS envelope to show all categories -->

<section class="container-fluid" id="section2">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 text-center">

          <h2><% if @user.name != nil%>
                    <%= @user.name %>,
                    <%end%>
          From here you can edit all your categories...</h2>

       <div class="col-xs-12 col-sm-12 col-md-12 column">  

                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">Categories</h3>
                  </div>
                  <div class="panel-body">
                    <%= link_to "Add a new category", new_category_path, :class =>"btn btn-default btn-xs"%> 
                    <%= link_to "Go back home", :root, :class =>"btn btn-default btn-xs"%>
                    <br>
                    <br>
                    <%= render 'categories' %>
                  </div>
                </div>
       </div>

    </div>
  </div>
</section>